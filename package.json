{
  "name": "fatigue-detection-data-collector",
  "displayName": "fatigue-detection-data-collector",
  "description": "Collects IDE activity data (active/idle/file switches) for fatigue detection.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:fatigueDetectionDataCollector.showStats"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fatigueDetectionDataCollector.showStats",
        "title": "Fatigue Detection: Show Stats"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@types/glob": "^7.2.0"
  }
}
